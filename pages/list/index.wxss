page {
    background-color: #f5f5f5; 
}

.item-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding:15px;
}

.item {
    width: calc(50% - 5px); 
    margin-bottom: 20px;
    box-sizing: border-box;
    text-align: center; 
    background-color: #ffffff; 
    border-radius: 10px;
    overflow: hidden; 
}

.item-image {
    width: 165px;
    height: 165px; 
    margin-bottom: 5px; 
}

.item-name {
    font-size: 16px;
    padding: 10px;
}
